<form action="">
    <fieldset>
        <legend>댓글 달기</legend>

        <div class="space_bbs__view__comment__board"
            id="spaceBbsViewCommentBoard"
            data-comment-space-id="{{id}}"
            data-param-limit="{{params.limit}}"
            data-param-ordering="{{params.ordering}}"
            data-param-space_type="{{params.space_type}}"
        >

            {{#items.length}}

                <ul class="list">
                {{#items}}
                    <li>

                        <div class="container" style="border-bottom:1px solid #ccc" data-comment-id="{{id}}">
                            <span class="name">{{#user_info.is_admin}}
                            {{user_info.name}}
                            {{/user_info.is_admin}}
                            {{^user_info.is_admin}}
                            {{user_info.hidden_name}}
                            {{/user_info.is_admin}}</span>
                            <div class="function" style="float:inherit;">
                                <span style="font-size:13px">({{created_at}})</span>
                                <div style="display:inline-block">
                                    <button type="button" class="modify">수정</button>
                                    <button type="button" class="delete">삭제</button>
                                </div>
                            </div>
                            <div class="reply" style="white-space: pre-line;">{{description}}
                            
                            </div>
                            {{#is_owner}}
                            

                            <div class="modify_context">
                                <textarea class="text" name="comment{{id}}"></textarea>
                                <button type="button" class="register"><span>저장</span></button>
                                <button type="button" class="cancel"><span>취소</span></button>
                            </div>
                            {{/is_owner}}
                        </div>

                    </li>
                {{/items}}
                </ul>

                {{#isPaging}}
                <div class="paging" id="spaceBbsViewBoardPaging">
                    <ul class="list">
                        {{#pagingArray}}
                        <li class="{{#currentPage}}active{{/currentPage}}"><a href="/v1/space/spaces/comments/{{id}}?limit=5&ordering=-id&current_page={{count}}&ID=10&offset={{offset}}" data-id="{{count}}"><span>{{ count }}</span></a></li>
                        {{/pagingArray}}
                    </ul>
                </div>
                {{/isPaging}}

            {{/items.length}}

            <div class="function">
                <div class="text">
                    <textarea name="description" placeholder="광고, 비방 글 등 게시판의 성격에 맞지 않는 글은 통보없이 삭제될 수 있습니다."></textarea>
                </div>
                <div class="submit">
                    <button type="submit">
                        <span><img src="/static/images/space/button_register_02.png" alt="등록하기"/></span>
                    </button>
                </div>
            </div>

        </div>

    </fieldset>
</form>